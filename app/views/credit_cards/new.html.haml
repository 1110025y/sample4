.contents
  = render "header-top"
  .contents__body
    = render "side-bar"
    .card_add 
      .credit_cards-title-message 下記の項目にクレジットカード情報を入力してください。
      = form_tag(credit_cards_path, method: :post, id: "charge-form", class: "details", name: "inputForm") do
        .number-details
          .card-number カード番号
          %span.must_check 必須
        .credit_cards-number
          = text_field_tag 'payment_card_no', "", class: 'cardnumber', id: "payment_card_no", placeholder: '半角数字のみ', type: "text", maxlength: "16"
        .image
          -# = image_tag(image_path('credit_cards/visa.svg'), class: 'cards-image')
          -# = image_tag(image_path('credit_cards/master.svg'), class: 'cards-image')
          -# = image_tag(image_path('credit_cards/jcb.svg'), class: 'cards-image')
          -# = image_tag(image_path('credit_cards/discover.svg'), class: 'cards-image')

        .expirationdate
          .expirationdate__details
            .date 有効期限
            %span.must_check 必須
          .expirationdate__choice
            .month
              %select#payment_card_month.card-default{name: "payment_card_month", type: "text"}
                %option{value: "1"} 01
                %option{value: "2"} 02
                %option{value: "3"} 03
                %option{value: "4"} 04
                %option{value: "5"} 05
                %option{value: "6"} 06
                %option{value: "7"} 07
                %option{value: "8"} 08
                %option{value: "9"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              .month-details 月
            .year
              %select#payment_card_year.card-default{name: "payment_card_year", type: "text"}
                %option{value: "2020"} 20
                %option{value: "2021"} 21
                %option{value: "2022"} 22
                %option{value: "2023"} 23
                %option{value: "2024"} 24
                %option{value: "2025"} 25
                %option{value: "2026"} 26
                %option{value: "2027"} 27
                %option{value: "2028"} 28
                %option{value: "2029"} 29
                %option{value: "2030"} 30
              .year-details 年

        .securitycode
          .securitycode__details
            .securitycode-details__title セキュリティコード  ※カード背面
            %span.must_check 必須
          .securitycode__cardsecurity
            = text_field_tag  "payment_card_cvc", "", type: 'text', class: 'securitycode__cardsecurity__form', id: "payment_card_cvc", maxlength: "4", placeholder: '4桁or3桁の番号'
        .add 
          = submit_tag "登録する", class: "add__btn", id: "payment_card_submit-button"
      
  .contents__box
  .footer
  = render "footer-bottom"