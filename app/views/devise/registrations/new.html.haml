%h2 会員登録
= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: :true do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
  .field
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "new-password"
  
  .field
    = f.label :family_name
    = f.text_field :family_name, placeholder: "例)山田", class: 'input-form1'
  .field
    = f.label :first_name
    = f.text_field :first_name, placeholder: "例)太郎", class: 'input-form1'

  .field
    = f.label :family_name_kana
    = f.text_field :family_name_kana, placeholder: "例)やまだ", class: 'input-form1'
  .field
    = f.label :first_name_kana
    = f.text_field :first_name_kana, placeholder: "例)たろう", class: 'input-form1'
  
  .actions
    = f.submit "登録"
= render "devise/shared/links"
